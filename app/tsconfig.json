 {
   "compilerOptions": {
     "target": "ES2022",
     "module": "NodeNext",
     "moduleResolution": "NodeNext",
     "strict": true,
     "esModuleInterop": true,
     "skipLibCheck": true,
     "forceConsistentCasingInFileNames": true,
     "outDir": "dist",
     "baseUrl": ".",
     "types": ["node"],
     "paths": {
       "@/*": ["src/*"]
     }
   },
   "include": ["src/**/*.ts", "test/index.spec.ts"],
   "exclude": ["node_modules", "dist"]
 }
